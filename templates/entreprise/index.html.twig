{% extends 'base.html.twig' %}

{% block title %}Page de contact{% endblock %}

{% block body %}
<section id="page_registration" class="flex-center">
    <h2>Contactez-nous</h2>
    {% for flash_message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ flash_message }}
    </div>
    {% endfor %}
    <p><span id="span">Vous avez une question ?</span> <br>Merci de nous envoyez un e-mail en utilisant le formulaire ci-dessous</p>
    <form action="{{ path('emailContact_entreprise') }}" method="post" id="forms">
        <label for="name">Nom*</label><input type="text" name="name" id="name" class="field" required>
        <label for="firstname">Prénom*</label><input type="text" name="firstname" id="firstname" class="field" required>
        <label for="email">E-mail*</label><input type="email" name="email" id="email" class="field" required>
        <label for="phone">Téléphone</label><input type="tel" name="phone" id="phone" class="field">
        <label for="subject">Objet*</label><input type="text" name="subject" id="subject" class="field" required>
        <label for="message">Message*</label><textarea name="message" class="field-text" required></textarea>
        <p class="rgpd"><input type="checkbox" name="rgpd" id="rgpd" required><label for="rgpd">J'ai lu et j'accèpte <a href="" class="rgpd-link">la Politique de Protection des Données Personnelles</a></label></p>
        <p class="submit-content"><input type="submit" value="Valider" class="button"></p>
        </form>
</section>
<section id="content-adresse">
    <h3 class="ag-name">Pure Car</h3>
    <p class="adresse">10 place de la gare<br>67000 Strasbourg<br>03.88.77.00.00<br><a href="mailto:contact@purecar.fr" class="mail">contact@purecar.fr</a></p>
    <div id="map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2639.3280250662106!2d7.734397115664686!3d48.58441777926161!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4796c84a183a412b%3A0x8487a3ae100876b0!2s10%20Place%20de%20la%20Gare%2C%2067000%20Strasbourg!5e0!3m2!1sfr!2sfr!4v1574282156931!5m2!1sfr!2sfr"></iframe>
    </div>
</section>
{% endblock %}
